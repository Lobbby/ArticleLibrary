<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= link_to "My profile", root_path %>
<%= link_to "New article", new_article_path %>
<br/><br/>

<%= form_tag "/articles", method: "GET" do %>
  <%= label_tag :search_article %>
  <%= text_field_tag :search_article %>
<br/>
  <%= submit_tag "Search" %>
<% end %>

<div id="articles">
  <% @articles.each do |article| %>
    <% cache article do %>
      <%= render article %>
      <p>
        <%= link_to "Show this article", article %>
      </p>
    <%end%>
  <% end %>
</div>

